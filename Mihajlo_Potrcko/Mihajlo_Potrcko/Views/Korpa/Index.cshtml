@using Mihajlo_Potrcko.Models
@model Mihajlo_Potrcko.Components.ViewDataContainer
@{
    ViewBag.Title = "Index";

    Korpa pageModel = Model.PageModel;
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => pageModel.SadrzajKorpe.First().Value.KPartner.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => pageModel.SadrzajKorpe.First().Value.KArtikal.Naziv_artikla)
        </th>
        <th>
            @Html.DisplayNameFor(model => pageModel.SadrzajKorpe.First().Value.IncInt.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => pageModel.SadrzajKorpe.First().Value.KArtikal.Cena_artikla)
        </th>
        <th>
            "Ukupna Cena"
        </th>
        <th></th>
    </tr>

    @foreach (var item in pageModel.SadrzajKorpe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value.KPartner.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value.KArtikal.Naziv_artikla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value.IncInt.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value.KArtikal.Cena_artikla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value.IncInt.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {key = item.Key})
                @Html.ActionLink("Delete", "Index", new {item.Key})
            </td>
        </tr>
    }

</table>