@using Mihajlo_Potrcko.Models
@model Mihajlo_Potrcko.Models.ViewDataContainer
@{
    ViewBag.Title = "Index";
    IEnumerable<Reklama> pageModel = Model.PageModel;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => pageModel.First().Slika.Link)
        </th>
        <th>
            @Html.DisplayNameFor(model => pageModel.First().Naziv_kupca)
        </th>
        <th>
            @Html.DisplayNameFor(model => pageModel.First().Datum_isteka)
        </th>
        <th></th>
    </tr>

@foreach (var item in pageModel) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Slika.Link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv_kupca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Datum_isteka)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReklamaID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ReklamaID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ReklamaID })
        </td>
    </tr>
}

</table>
