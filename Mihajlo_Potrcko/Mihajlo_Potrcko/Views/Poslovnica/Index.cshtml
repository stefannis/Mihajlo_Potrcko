
@using Mihajlo_Potrcko.Models
@model Mihajlo_Potrcko.Models.ViewDataContainer

@{
    ViewBag.Title = "Index";

    IEnumerable<Poslovnica> Lokalna = Model.PageModel;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => Lokalna.First().Partner.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => Lokalna.First().Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => Lokalna.First().Broj_telefona)
        </th>
        <th></th>
    </tr>

@foreach (Poslovnica item in Model.PageModel) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Partner.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Broj_telefona)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PoslovnicaID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PoslovnicaID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PoslovnicaID })
        </td>
    </tr>
}

</table>
