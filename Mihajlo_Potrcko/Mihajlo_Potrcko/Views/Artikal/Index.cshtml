@using Mihajlo_Potrcko.Models
@model Mihajlo_Potrcko.Components.ViewDataContainer

@{
    ViewBag.Title = "Index";
    IEnumerable<Artikal> pageModel = Model.PageModel;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => pageModel.First().Slika.Link)
        </th>
        <th>
            @Html.DisplayNameFor(model => pageModel.First().Naziv_artikla)
        </th>
        <th>
            @Html.DisplayNameFor(model => pageModel.First().Cena_artikla)
        </th>
        <th></th>
    </tr>

@foreach (var item in pageModel) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Slika.Link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv_artikla)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cena_artikla)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ArtikalID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ArtikalID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ArtikalID })
        </td>
    </tr>
}

</table>
