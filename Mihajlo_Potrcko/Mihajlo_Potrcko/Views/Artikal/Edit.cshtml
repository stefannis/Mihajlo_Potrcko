@using Mihajlo_Potrcko.Models
@model Mihajlo_Potrcko.Components.ViewDataContainer

@{
    ViewBag.Title = "Edit";
    Artikal pageModel = Model.PageModel;
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Artikal</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => pageModel.ArtikalID)

        <div class="form-group">
            @Html.LabelFor(model => pageModel.Naziv_artikla, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => pageModel.Naziv_artikla, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => pageModel.Naziv_artikla, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => pageModel.Cena_artikla, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => pageModel.Cena_artikla, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => pageModel.Cena_artikla, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => pageModel.SlikaID, "FkSlikaId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FkSlikaId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => pageModel.SlikaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
