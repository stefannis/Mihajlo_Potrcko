@using Mihajlo_Potrcko.Models
@model Mihajlo_Potrcko.Models.Artikal_U_Poslovnici

@{
    Potrcko db = new Potrcko();
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Artikal_U_Poslovnici</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Stanje, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Stanje)
                    @Html.ValidationMessageFor(model => model.Stanje, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PoslovnicaID, "Adresa poslovnice", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PoslovnicaID", new SelectList(db.Poslovnica, "PoslovnicaID", "Adresa", Model.PoslovnicaID ), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PoslovnicaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ArtikalID, "Naziv artikla", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ArtikalID", new SelectList(db.Artikal, "ArtikalID", "Naziv_Artikla", Model.ArtikalID), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ArtikalID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sacuvaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad na listu", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
