            <section id="blog">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="block">
                                <ul>
                                    <li class="wow fadeInLeft" data-wow-duration="300ms" data-wow-delay="300ms">
                                        <div class="blog-img">
                                            <img src="/images/@pageModel.Slika.Link" alt=":(">
                                        </div>
                                        <div class="content-right">
                                            <h3>@pageModel.Naziv_artikla</h3>
                                            <p></p>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div><!-- .col-md-12 close -->
