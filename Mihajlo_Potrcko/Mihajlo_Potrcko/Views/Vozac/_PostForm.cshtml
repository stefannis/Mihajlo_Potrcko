@using Mihajlo_Potrcko.Models
@model Mihajlo_Potrcko.Models.Vozac

@{
    Potrcko db = new Potrcko();
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ZaposleniID, "ID zaposlenog", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ZaposleniID", new SelectList(db.Zaposleni, "ZaposleniID", "ZaposleniID", Model.ZaposleniID), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ZaposleniID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NalogID, "ID naloga", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NalogID", new SelectList(db.Nalog, "NalogiD", "NalogID", Model.NalogID), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NalogID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad na listu", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


