@using Mihajlo_Potrcko.Models
@model Mihajlo_Potrcko.Components.ViewDataContainer

@{
    ViewBag.Title = "Index";
    IEnumerable<Reklamacija> pageModel = Model.PageModel;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => pageModel.First().Racun.Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => pageModel.First().Opis)
        </th>
        <th></th>
    </tr>

@foreach (var item in pageModel) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Racun.Adresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReklamacijaID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ReklamacijaID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ReklamacijaID })
        </td>
    </tr>
}

</table>
